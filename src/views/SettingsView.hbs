<form>
  <h4>{{t 'Time'}}</h4>
  <p class="help-block">{{t 'Select the time of interest'}}</p>
  <div class="form-group">
    <label for="">{{t 'Start'}}</label>
    <div class="input-group date" data-provide="datepicker" data-date-format="yyyy-mm-dd">
      <input type="text" class="form-control">
      <div class="input-group-addon">
        <span class="glyphicon glyphicon-th"></span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="">{{t 'End'}}</label>
    <div class="input-group date" data-provide="datepicker" data-date-format="yyyy-mm-dd">
      <input type="text" class="form-control">
      <div class="input-group-addon">
        <span class="glyphicon glyphicon-th"></span>
      </div>
    </div>
  </div>

  <h4>{{t 'Area'}}</h4>
  <div class="form-group">
    <label for="">{{t 'Bounding Box'}}</label>
    <div class="input-group">
      <span class="input-group-addon">
        <input type="radio" name="area-type" checked>
      </span>
      <input type="number" class="form-control" placeholder="Min-X">
      <span class="input-group-addon">-</span>
      <input type="number" class="form-control" placeholder="Min-Y">
      <span class="input-group-addon">-</span>
      <input type="number" class="form-control" placeholder="Max-X">
      <span class="input-group-addon">-</span>
      <input type="number" class="form-control" placeholder="Max-Y">
    </div><!-- /input-group -->
    <button class="btn btn-default btn-block">{{t 'Draw Bounding Box'}}</button>
  </div>

  <div class="form-group">
    <label for="">{{t 'Polygon'}}</label>
     <div class="input-group">
      <span class="input-group-addon">
        <input type="radio" name="area-type">
      </span>
      <div class="input-group-btn">
        <label class="btn btn-default btn-file">
          {{t 'Browse'}} <input type="file" style="display: none;">
        </label>
      </div>
      <input type="text" class="form-control" placeholder="{{t 'No file selected'}}" disabled>
       <!--
       <input type="file" id="">-->
      </div>
      <p class="help-block">{{t 'Select a shapefile'}}</p>
      <div class="panel panel-default panel-features" style="display: none">
        <div class="panel-heading">
          <h3 class="panel-title">{{t 'Features'}}</h3>
        </div>
        <div class="panel-body">
          <div class="feature-list"></div>
        </div>
      </div>
    </div>
</form>
