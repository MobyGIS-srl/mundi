<label class="col-sm-6 control-label"
  {{#if title}}
    data-toggle="tooltip" data-placement="top" title="{{t title}}"
  {{/if}}
>{{t displayName}}
  {{#if title}}
    <i class="fa fa-info-circle" aria-hidden="true"></i>
  {{/if}}
</label>
<div class="col-sm-6">
  <select data-type="{{ type }}" class="form-control input-sm">
    <option value="">---</option>
    {{#each options}}
    <option value="{{ this.value }}" {{#if this.isSelected}}selected="selected"{{/if}}>{{ t this.label }}</option>
    {{/each}}
  </select>
</div>
